<div class="ui container">
  <div class="ui secondary menu">
    <div class="item">
      <strong>
        <%= link_to @user.username, user_path(@user) %>
      </strong>
    </div>

    <div class="right item">
      <% if @user != current_user %>
        <% if @following %>
          <%= button_to "Unfollow", unfollow_user_path(@user), class: "ui blue button", method: :post  %>
        <% else %>
          <%= button_to "Follow", follow_user_path(@user), class: "ui blue button", method: :post %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="ui horizontal list">
    <div class="item">
      <%= link_to pluralize(@user.photos.count, "photo"), user_path(@user) %>
    </div>
    <div class="item">
      <%= link_to pluralize(@user.followers.count, "follower"), followers_user_path(@user) %>
    </div>
    <div class="item">
      <%= link_to "#{@user.following.count} following", following_user_path(@user) %>
    </div>
  </div>
</div>
